{
  "editor.tabSize": 2,
  "files.exclude": {
    "node_modules": true,
    "**/*.scss.d.ts": true,

    // Terraform
    ".infrastructure/cloud/terraform.tfstate": true,
    ".infrastructure/cloud/terraform.tfstate.backup": true,
    ".infrastructure/cloud/.terraform.lock.hcl": true,
    ".infrastructure/cloud/.terraform.tfstate.lock.info": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "prettier.enable": true,
  "stylelint.validate": ["css", "scss", "sass", "html", "astro"],
  "eslint.validate": ["javascript"],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
