<style lang="scss">
  @use '../styles/styles.scss' as *;

  section {
    width: 100%;
    height: auto;
    margin: 0 auto;
    justify-content: center;
    padding-top: 72px;
    padding-bottom: 96px;
    background-image: url('/src/assets/images/background.png');
    background-size: cover;
    background-repeat: no-repeat;
  }

  .container {
    max-width: 1200px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .content {
    flex-direction: column;
    gap: 24px;
    align-items: center;
    justify-content: center;
    max-width: 588px;
  }

  h2 {
    font-size: var(--h2-size);
    font-weight: 700;
    text-align: center;
    width: 100%;
  }

  p {
    display: inline;
    font-size: var(--text-size);
    font-weight: 400;
    line-height: 25px;
    text-align: justify;
    width: 100%;
  }

  p strong {
    display: inline;
    font-weight: 600;
  }

  @media screen and (max-width: $max-medium-phone-bp) {
    section {
      padding: 64px 18px 96px 18px;
    }
  }

  @media screen and (min-width: $min-large-phone-bp) and (max-width: $max-large-phone-bp) {
    section {
      padding-top: 64px;
    }
  }
</style>
