---
import { Image } from 'astro:assets'
import PrimaryButton from '@components/buttons/PrimaryButton.astro'
import { simpleGray, small } from '@styles'
import interfaceImage from '@assets/images/interface.png'
---

<style is:global>
  .hero-cta-button {
    margin-top: 36px;
  }
</style>

<section>
  <div class="container">
    <div class="content">
      <slot />

      <PrimaryButton
        title="Try for free"
        link="https://forms.gle/axdDXjw7k4HpR1Z39"
        class="hero-cta-button"
      />
      <p>Available on iOS, Android & Web</p>
      <div id="separator"></div>
    </div>

    <Image src={interfaceImage} alt="Interface image" class="interface" />
  </div>
</section>

<style define:vars={{ simpleGray, small }}>
  section {
    width: 100%;
    height: auto;
    margin: 0 auto;
    justify-content: center;
  }

  .container {
    max-width: 1200px;
    padding-top: 36px;
    padding-bottom: 36px;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .interface {
    width: 939px;
    height: 683px;
    margin-left: 44px;
  }

  .content {
    display: flex;
    max-width: 588px;
    width: 100%;
    margin-top: 120px;
    flex-direction: column;
    align-items: flex-start;
  }

  .cta-button {
    margin-top: 36px;
  }

  p {
    font-size: var(--small);
    font-weight: 500;
    color: var(--simpleGray);
    margin-top: 36px;
  }

  #separator {
    width: 588px;
    display: block;
  }
</style>
