---
import PrimaryButton from '@components/buttons/PrimaryButton.astro'
import { h1, h3, h1Mobile, paragraph } from '@styles'
---

<section>
  <div class="container">
    <div class="content">
      <p class="code">404</p>
      <p class="title">Oops! Not found.</p>
      <p class="message">
        Let us know in the chat what you're looking for, and we'll help you.
      </p>
    </div>

    <PrimaryButton title="Go home" link="/" />
  </div>
</section>

<style define:vars={{ h1, h3, h1Mobile, paragraph }}>
  section {
    width: 100%;
    height: auto;
    margin: 0 auto;
    justify-content: center;
  }

  .container {
    max-width: 1200px;
    padding-top: 48px;
    padding-bottom: 120px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .content {
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 36px;
  }

  .code {
    font-size: 12.7778rem;
    font-weight: 700;
    line-height: 12.7778rem;
    text-align: center;
    background: url('src/assets/images/404error.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .title {
    font-size: var(--h1);
    font-weight: 700;
    line-height: 3.4444rem;
    text-align: center;
    margin-top: 16px;
  }

  .message {
    font-size: var(--h3);
    font-weight: 500;
    line-height: 1.7778rem;
    text-align: center;
    margin-top: 12px;
  }

  @media screen and (max-width: 374px) {
    section {
      padding: 0 18px;
    }

    .code {
      font-size: 8.2222rem;
      line-height: 8.2222rem;
    }

    .title {
      font-size: var(--h1Mobile);
      line-height: 2.7778rem;
    }

    .message {
      font-size: var(--paragraph);
      line-height: 1.5556rem;
    }
  }

  @media screen and (min-width: 375px) and (max-width: 743px) {
    section {
      padding: 0 18px;
    }

    .code {
      font-size: 10rem;
      line-height: 10rem;
    }

    .title {
      font-size: var(--h1Mobile);
      line-height: 2.7778rem;
    }

    .message {
      font-size: var(--paragraph);
      line-height: 1.5556rem;
    }
  }
</style>
