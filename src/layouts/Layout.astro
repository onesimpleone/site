---
import Analytics from '@vercel/analytics/astro'

const { title, description } = Astro.props

const fullTitle = `${title} | OneSimple`
const fullDescription =
  description ||
  'A dedicated app for Instagram businesses to manage customers. Organize chats by category and track deals with ease.'
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>{fullTitle}</title>
    <meta name="description" content={fullDescription} />
    <meta name="theme-color" content="#0D0D0D" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://onesimpleone.com/" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={fullDescription} />
    <meta property="og:image" content="/thumbnail.jpg" />

    <!-- Twitter (X) -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={fullDescription} />
    <meta name="twitter:image" content="/thumbnail.jpg" />

    <!-- Links -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    <link
      rel="canonical"
      href="https://onesimpleone.com/"
      data-baseprotocol="https:"
      data-basehost="onesimpleone.com"
    />

    <!-- Google tag (gtag.js) -->
    <script src="https://www.googletagmanager.com/gtag/js?id=G-YR2D679RWC"
    ></script>
    <script>
      // @ts-nocheck
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'G-YR2D679RWC')
    </script>

    <script type="text/javascript">
      window.$crisp = []
      window.CRISP_WEBSITE_ID = '41873760-97b0-4fd1-ac8f-f333ba9a9ca7'
      ;(function () {
        d = document
        s = d.createElement('script')
        s.src = 'https://client.crisp.chat/l.js'
        s.async = 1
        d.getElementsByTagName('head')[0].appendChild(s)
      })()
    </script>

    <!-- Meta Pixel Code -->
    <script>
      // @ts-nocheck
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments)
        }
        if (!f._fbq) f._fbq = n
        n.push = n
        n.loaded = !0
        n.version = '2.0'
        n.queue = []
        t = b.createElement(e)
        t.async = !0
        t.src = v
        s = b.getElementsByTagName(e)[0]
        s.parentNode.insertBefore(t, s)
      })(
        window,
        document,
        'script',
        'https://connect.facebook.net/en_US/fbevents.js',
      )
      fbq('init', '1823461878126847')
      fbq('track', 'PageView')
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=1823461878126847&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->
  </head>

  <body>
    <slot />
    <Analytics />
  </body>
</html>

<style is:global>
  @font-face {
    font-weight: 400 700;
    font-family: Figtree;
    font-style: normal;
    font-display: swap;
    src: url('/fonts/Figtree-VariableFont_wght.ttf') format('truetype');
  }

  @font-face {
    font-weight: 700;
    font-family: 'Figtree Italic';
    font-style: italic;
    font-display: swap;
    src: url('/fonts/Figtree-Italic-VariableFont_wght.ttf') format('truetype');
  }

  * {
    box-sizing: border-box;
    margin: 0;
  }

  body * {
    display: flex;
  }

  script {
    display: none;
  }

  *:focus {
    outline: none;
  }

  html {
    font-size: 18px;
  }

  body {
    width: 100%;
    height: 100%;
    background-color: #f9faf7;
    overflow-x: hidden;
    overflow-y: scroll;
    min-width: 320px;
  }

  a {
    text-decoration: none;
  }

  a,
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  span,
  button {
    font-family:
      Figtree,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
    -webkit-font-smoothing: antialiased;
    color: #1e2027;
  }
</style>
