---
const { title, description } = Astro.props

const fullTitle = `${title} | OneSimple`
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0D0D0D" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://onesimpleone.com/" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/thumbnail.jpg" />

    <!-- Twitter (X) -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/thumbnail.jpg" />

    <!-- Links -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    <link
      rel="canonical"
      href="https://onesimpleone.com/"
      data-baseprotocol="https:"
      data-basehost="onesimpleone.com"
    />

    <!-- Scripts -->
    <script
      src="https://connect.facebook.net/signals/config/1823461878126847?v=2.9.185&r=stable&domain=onesimpleone.com&hme=93c44828b638838a88daf3a14a90ff297f7fc4ade758f21de5500c9f17542765&ex_m=70%2C122%2C107%2C111%2C61%2C4%2C100%2C69%2C16%2C97%2C89%2C51%2C54%2C173%2C176%2C188%2C184%2C185%2C187%2C29%2C101%2C53%2C77%2C186%2C168%2C171%2C181%2C182%2C189%2C132%2C41%2C194%2C191%2C192%2C34%2C144%2C15%2C50%2C198%2C197%2C134%2C18%2C40%2C1%2C43%2C65%2C66%2C67%2C71%2C93%2C17%2C14%2C96%2C92%2C91%2C108%2C52%2C110%2C39%2C109%2C30%2C94%2C26%2C169%2C172%2C141%2C86%2C56%2C84%2C33%2C73%2C0%2C95%2C32%2C28%2C82%2C83%2C88%2C47%2C46%2C87%2C37%2C11%2C12%2C13%2C6%2C7%2C25%2C22%2C23%2C57%2C62%2C64%2C75%2C102%2C27%2C76%2C9%2C8%2C80%2C48%2C21%2C104%2C103%2C105%2C98%2C10%2C20%2C3%2C38%2C74%2C19%2C5%2C90%2C81%2C44%2C35%2C85%2C2%2C36%2C63%2C42%2C106%2C45%2C79%2C68%2C112%2C60%2C59%2C31%2C99%2C58%2C55%2C49%2C78%2C72%2C24%2C113"
    ></script>
    <script src="https://connect.facebook.net/en_US/fbevents.js"></script>
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-weight: 400 700;
    font-family: Figtree;
    font-style: normal;
    font-display: swap;
    src: url('/fonts/Figtree-VariableFont_wght.ttf') format('truetype');
  }

  @font-face {
    font-weight: 700;
    font-family: 'Figtree Italic';
    font-style: italic;
    font-display: swap;
    src: url('/fonts/Figtree-Italic-VariableFont_wght.ttf') format('truetype');
  }

  * {
    box-sizing: border-box;
    margin: 0;
  }

  body * {
    display: flex;
  }

  script {
    display: none;
  }

  *:focus {
    outline: none;
  }

  html {
    font-size: 18px;
  }

  body {
    width: 100%;
    height: 100%;
    background-color: #f9faf7;
    overflow-x: hidden;
    overflow-y: scroll;
    min-width: 320px;
  }

  a {
    text-decoration: none;
  }

  a,
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  span,
  button {
    font-family:
      Figtree,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
    -webkit-font-smoothing: antialiased;
    color: #1e2027;
  }
</style>
