---
import { Image } from 'astro:assets'

import InstagramButton from '@components/buttons/InstagramButton.astro'
import FooterLink from '@components/links/FooterLink.astro'
import LogoSmallImage from '@assets/images/logo-small.svg'
---

<footer>
  <div class="container">
    <Image src={LogoSmallImage} alt="OneSimple logo" class="logo" />
    <div class="socials">
      <InstagramButton />
    </div>
    <div>
      <FooterLink title="Terms" link="/documents/terms.html" />
      <FooterLink title="Privacy" link="/documents/privacy.html" />
      <FooterLink title="Cookies" link="/documents/cookies.html" />
    </div>
    <p class="copyright">Â© 2025 OneSimple, Inc. All rights reserved.</p>
  </div>
</footer>

<style lang="scss">
  @use '../styles/styles.scss' as *;

  footer {
    width: 100%;
    height: auto;
    margin: 0 auto;
    justify-content: center;
    background-color: var(--grayscale-50);
  }

  .container {
    max-width: 1200px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding-top: 72px;
    padding-bottom: 64px;
  }

  .logo {
    width: 44px;
    height: 40px;
    margin-bottom: 52px;
  }

  .socials {
    margin-bottom: 12px;
  }

  .copyright {
    font-size: var(--small-text-size);
    font-weight: 500;
    color: var(--simple-gray);
    text-align: center;
  }
</style>
