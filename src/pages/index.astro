---
import Heading from '@components/blocks/Heading.astro'
import Layout from '@layouts/Layout.astro'
import Header from '@layouts/Header.astro'
import Hero from '@layouts/Hero.astro'
import OfficialByMeta from '@layouts/OfficialByMeta.astro'
import Footer from '@layouts/Footer.astro'
import { space } from '@styles'
---

<Layout title="Instagram Business App">
  <Header isBadgeShown={true} />
  <Hero>
    <Heading
      h2="A specially designed app for businesses on Instagram. Manage customers with ease."
      buttonTitle="Try for free"
      >Business messaging app for{`${space}`}<span class="highlight"
        >Instagram</span
      ></Heading
    >
  </Hero>
  <OfficialByMeta />
  <Footer />
</Layout>

<style lang="scss">
  @use '../styles/styles.scss' as *;

  .highlight {
    color: var(--instagram);
    font-style: italic;
    display: inline-block;
  }
</style>
