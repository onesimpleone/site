---
import PrimaryButton from '@components/buttons/PrimaryButton.astro'
import {
  h1 as h1Style,
  h3,
  instagram,
  meta,
  h1Mobile,
  paragraph,
  simpleGray,
  small,
} from '@styles'

const { h1, h2, highlight, isMeta, buttonTitle } = Astro.props
---

<h1>
  {`${h1}\u00A0`}<span class:list={['highlight', { metaHighlight: isMeta }]}
    >{highlight}</span
  >
</h1>
<h2>
  {h2}
</h2>
<PrimaryButton
  title={buttonTitle}
  link="https://forms.gle/axdDXjw7k4HpR1Z39"
  class="primary-button-hero"
/>
<p>Available on iOS, Android & Web</p>

<style is:global>
  .primary-button-hero {
    margin: 36px 0;
  }

  @media screen and (max-width: 743px) {
    .primary-button-hero {
      margin: 24px 0;
    }
  }
</style>

<style
  define:vars={{
    h1Style,
    h3,
    instagram,
    meta,
    h1Mobile,
    paragraph,
    simpleGray,
    small,
  }}
>
  h1 {
    display: inline;
    font-size: var(--h1Style);
    font-weight: 700;
    line-height: 3.4444rem;
    width: 100%;
  }

  .highlight {
    display: inline;
    color: var(--instagram);
    font-style: italic;
  }

  .metaHighlight {
    color: var(--meta);
  }

  h2 {
    font-size: var(--h3);
    font-weight: 500;
    line-height: 1.7778rem;
    margin-top: 24px;
  }

  p {
    font-size: var(--small);
    font-weight: 500;
    color: var(--simpleGray);
  }

  p {
    font-size: var(--paragraph);
  }

  @media screen and (max-width: 743px) {
    h1 {
      font-size: var(--h1Mobile);
      line-height: 2.7778rem;
    }

    h2 {
      font-size: var(--paragraph);
      line-height: 1.5556rem;
      margin-top: 16px;
    }

    p {
      font-size: var(--small);
    }
  }
</style>
