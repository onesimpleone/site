---
const { link, title } = Astro.props
---

<a href={link}>
  {title}
</a>

<style lang="scss">
  @use '../../styles/styles.scss' as *;

  a {
    align-items: center;
    justify-content: center;
    padding: 10px 14px;
    background-color: var(--senary-5);
    font-size: var(--small-text-size);
    font-weight: 700;
    letter-spacing: 0.0083rem;
    border-radius: 14px;
    color: var(--grayscale-40);
  }

  a:hover {
    background-color: var(--senary-15);
    cursor: pointer;
  }

  @media screen and (max-width: $max-large-tablet-bp) {
    a {
      padding: 12px 24px;
    }
  }
</style>
