---
import { small, senary5, senary15, grayscale40 } from '@styles'

const { link, title } = Astro.props
---

<a href={link}>
  {title}
</a>

<style define:vars={{ small, senary5, senary15, grayscale40 }}>
  a {
    align-items: center;
    justify-content: center;
    padding: 10px 14px;
    background-color: var(--senary5);
    font-size: var(--small);
    font-weight: 700;
    letter-spacing: 0.0083rem;
    border-radius: 14px;
    color: var(--grayscale40);
  }

  a:hover {
    background-color: var(--senary15);
    cursor: pointer;
  }

  @media screen and (max-width: 1271px) {
    a {
      padding: 12px 24px;
    }
  }
</style>
