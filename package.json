{
  "name": "onesimple-site",
  "version": "2.0.0",
  "private": true,
  "description": "OneSimple site.",
  "type": "module",
  "scripts": {
    "build": "astro check && astro build",
    "lint:astro-check": "astro check",
    "lint:eslint-check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:eslint-fix": "yarn lint:eslint-check --fix",
    "lint:prettier-check": "prettier --check .",
    "lint:prettier-fix": "prettier --write .",
    "lint:stylelint-check": "stylelint '**/*{.css,.scss,.sass}'",
    "lint:stylelint-fix": "stylelint '**/*{.css,.scss,.sass}' --fix",
    "lint:typescript-check": "tsc --noEmit",
    "prepare": "husky",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "astro": "^5.3.1",
    "sass": "^1.85.1"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.14.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "src/*.{css,js,jsx,ts,tsx,json,yml,yaml,astro}": "prettier --write",
    "src/*.{css,scss,sass}": "stylelint --fix"
  }
}
